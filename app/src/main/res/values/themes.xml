<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Taskete" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryAccentColor</item>
        <item name="colorSecondary">@color/black</item>#4db6ac
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="floatingActionButtonStyle">@style/Theme.Taskete.FAB</item>
        <item name="actionModeBackground">@color/primaryColor</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:switchPreferenceStyle">@color/secondaryColor</item>
    </style>

    <style name="Theme.Taskete.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
    </style>

</resources>

